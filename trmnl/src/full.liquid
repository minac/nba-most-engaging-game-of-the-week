<div class="view view--full">
  <div class="layout layout--column">

    <!-- Header -->
    <div class="header">
      <div class="header__title">
        <h1>üèÄ MOST ENGAGING GAME</h1>
      </div>
    </div>

    <!-- Main Content -->
    <div class="content flex-grow">

      {% if game %}

        <!-- Game Date -->
        <div class="text-center mb-4">
          <p class="text-muted">{{ game.game_date }}</p>
        </div>

        <!-- Teams and Score -->
        <div class="game-score">
          <div class="team team--away">
            <div class="team__name">{{ game.away_team.name }}</div>
            <div class="team__abbr text-muted">{{ game.away_team.abbr }}</div>
          </div>

          <div class="vs">
            <span>@</span>
          </div>

          <div class="team team--home">
            <div class="team__name">{{ game.home_team.name }}</div>
            <div class="team__abbr text-muted">{{ game.home_team.abbr }}</div>
          </div>
        </div>

        <!-- Engagement Score -->
        <div class="engagement-score">
          <div class="score-label">ENGAGEMENT SCORE</div>
          <div class="score-value">{{ score }}</div>
        </div>

        <!-- Score Breakdown -->
        <div class="breakdown">
          <div class="breakdown__row">
            <span>Lead Changes</span>
            <span>{{ breakdown.lead_changes.count }} ({{ breakdown.lead_changes.points }} pts)</span>
          </div>
          <div class="breakdown__row">
            <span>Top 5 Teams</span>
            <span>{{ breakdown.top5_teams.count }} ({{ breakdown.top5_teams.points }} pts)</span>
          </div>
          <div class="breakdown__row">
            <span>Game Closeness</span>
            <span>{{ breakdown.close_game.points }} pts</span>
          </div>
          <div class="breakdown__row">
            <span>Star Players</span>
            <span>{{ breakdown.star_power.count }} ({{ breakdown.star_power.points }} pts)</span>
          </div>
          {% if breakdown.favorite_team.has_favorite %}
          <div class="breakdown__row breakdown__row--highlight">
            <span>‚≠ê Favorite Team Bonus</span>
            <span>{{ breakdown.favorite_team.points }} pts</span>
          </div>
          {% endif %}
        </div>

      {% else %}

        <!-- No Game Found -->
        <div class="empty-state">
          <div class="empty-state__icon">üèÄ</div>
          <div class="empty-state__message">No games found</div>
          <div class="empty-state__details text-muted">
            {{ error_message | default: "Check back later for NBA game recommendations" }}
          </div>
        </div>

      {% endif %}

    </div>

    <!-- Footer -->
    <div class="footer text-center text-muted">
      <p>Updated {{ updated_at | default: "recently" }}</p>
    </div>

  </div>
</div>

