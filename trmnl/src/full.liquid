<div class="screen">
  {% if game %}
    <h1>GAME OF THE WEEK</h1>

    <div class="matchup">
      {{ game.away_team.abbr }} @ {{ game.home_team.abbr }}
    </div>

    <div class="date">{{ game.game_date }}</div>

    <div class="reasons">
      {% if breakdown.close_game.points != "0.0" %}<span>Close game</span>{% endif %}
      {% if breakdown.top5_teams.count > 0 %}<span>Top 5 teams</span>{% endif %}
      {% if breakdown.star_power.count > 0 %}<span>Star players</span>{% endif %}
      {% if breakdown.total_points.threshold_met %}<span>High scoring</span>{% endif %}
      {% if breakdown.favorite_team.points != "0.0" %}<span>Your team</span>{% endif %}
    </div>

    <div class="footer">{{ updated_at }}</div>
  {% else %}
    <div class="empty">
      <div class="icon">üèÄ</div>
      <div>No games found</div>
    </div>
  {% endif %}
</div>

<style>
  .screen {
    width: 800px;
    height: 480px;
    padding: 40px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-family: system-ui, sans-serif;
  }
  h1 {
    font-size: 1.5rem;
    margin: 0 0 2rem;
    letter-spacing: 0.1em;
  }
  .matchup {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  .date {
    font-size: 1.2rem;
    opacity: 0.6;
    margin-bottom: 2rem;
  }
  .reasons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  .reasons span {
    padding: 0.4rem 0.8rem;
    border: 1px solid #000;
    border-radius: 4px;
    font-size: 0.9rem;
  }
  .footer {
    margin-top: auto;
    font-size: 0.8rem;
    opacity: 0.5;
  }
  .empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .icon { font-size: 3rem; }
</style>
