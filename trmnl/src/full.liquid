<div class="view view--full">
  <div class="layout layout--column">

    <!-- Header -->
    <div class="header">
      <div class="header__title">
        <h1>üèÄ MOST ENGAGING GAME</h1>
      </div>
    </div>

    <!-- Main Content -->
    <div class="content flex-grow">

      {% if game %}

        <!-- Game Date -->
        <div class="text-center mb-4">
          <p class="text-muted">{{ game.game_date }}</p>
        </div>

        <!-- Teams and Score -->
        <div class="game-score">
          <div class="team team--away">
            <div class="team__name">{{ game.away_team.name }}</div>
            <div class="team__abbr text-muted">{{ game.away_team.abbr }}</div>
          </div>

          <div class="vs">
            <span>@</span>
          </div>

          <div class="team team--home">
            <div class="team__name">{{ game.home_team.name }}</div>
            <div class="team__abbr text-muted">{{ game.home_team.abbr }}</div>
          </div>
        </div>


      {% else %}

        <!-- No Game Found -->
        <div class="empty-state">
          <div class="empty-state__icon">üèÄ</div>
          <div class="empty-state__message">No games found</div>
          <div class="empty-state__details text-muted">
            {{ error_message | default: "Check back later for NBA game recommendations" }}
          </div>
        </div>

      {% endif %}

    </div>

    <!-- Footer -->
    <div class="footer text-center text-muted">
      <p>Updated: {{ updated_at | default: "recently" }}</p>
    </div>

  </div>
</div>

<style>
  .view--full {
    width: 800px;
    height: 400px;
    padding: 15px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    overflow: hidden;
  }

  .header__title h1 {
    font-size: 1.5rem;
    font-weight: bold;
    text-align: center;
    margin: 0 0 0.8rem 0;
    padding-bottom: 0.6rem;
    border-bottom: 2px solid #000;
  }

  .game-score {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 1.2rem 0;
    gap: 1.5rem;
  }

  .team {
    text-align: center;
    flex: 1;
  }

  .team__name {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.2rem;
  }

  .team__abbr {
    font-size: 0.8rem;
    margin-bottom: 0.4rem;
  }

  .team__score {
    font-size: 2.5rem;
    font-weight: bold;
    margin-top: 0.4rem;
  }

  .vs {
    font-size: 1.2rem;
    opacity: 0.5;
    font-weight: bold;
  }

  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
  }

  .empty-state__icon {
    font-size: 3rem;
    margin-bottom: 0.8rem;
  }

  .empty-state__message {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.4rem;
  }

  .empty-state__details {
    font-size: 0.9rem;
  }

  .footer {
    margin-top: auto;
    padding-top: 0.6rem;
    border-top: 1px solid #ddd;
    font-size: 0.75rem;
  }

  .text-center {
    text-align: center;
  }

  .text-muted {
    opacity: 0.6;
  }

  .mb-4 {
    margin-bottom: 1rem;
  }

  .flex-grow {
    flex-grow: 1;
  }
</style>
