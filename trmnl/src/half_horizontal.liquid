<div class="view view--half-horizontal">
  <div class="layout layout--column">

    {% if game %}

      <!-- Header -->
      <div class="header">
        <h2>üèÄ BEST GAME</h2>
      </div>

      <!-- Content -->
      <div class="content flex-grow">

        <!-- Date -->
        <div class="game-date">{{ game.game_date }}</div>

        <!-- Score -->
        <div class="game-score">
          <div class="team">
            <span class="team__abbr">{{ game.away_team.abbr }}</span>
          </div>
          <span class="vs">@</span>
          <div class="team">
            <span class="team__abbr">{{ game.home_team.abbr }}</span>
          </div>
        </div>

      </div>

      <!-- Footer -->
      <div class="footer">
        <p>Updated: {{ updated_at | default: "recently" }}</p>
      </div>

    {% else %}

      <!-- Empty State -->
      <div class="empty">
        <div class="empty__icon">üèÄ</div>
        <div class="empty__message">No games</div>
      </div>

    {% endif %}

  </div>
</div>

<style>
  .view--half-horizontal {
    width: 800px;
    height: 200px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    overflow: hidden;
  }

  .header h2 {
    font-size: 1rem;
    font-weight: bold;
    margin: 0 0 0.6rem 0;
    padding-bottom: 0.3rem;
    border-bottom: 2px solid #000;
    text-align: center;
  }

  .flex-grow {
    flex-grow: 1;
  }

  .game-date {
    text-align: center;
    font-size: 0.7rem;
    opacity: 0.7;
    margin-bottom: 0.6rem;
  }

  .game-score {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin: 0.8rem 0;
  }

  .team {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
  }

  .team__abbr {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .team__score {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .vs {
    font-size: 1rem;
    opacity: 0.5;
  }

  .empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .empty__icon {
    font-size: 2rem;
    margin-bottom: 0.3rem;
  }

  .empty__message {
    font-size: 0.9rem;
    font-weight: 600;
    opacity: 0.6;
  }

  .footer {
    margin-top: auto;
    padding-top: 0.5rem;
    border-top: 1px solid #ddd;
    text-align: center;
    font-size: 0.6rem;
    opacity: 0.6;
  }

  .footer p {
    margin: 0;
  }
</style>
