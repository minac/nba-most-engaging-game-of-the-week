  }

  .teams {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    margin: 0.8rem 0;
  }

  .team-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.6rem;
