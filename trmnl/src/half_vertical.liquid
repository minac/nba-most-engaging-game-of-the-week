<div class="view view--half-vertical">
  <div class="layout layout--column">

    {% if game %}

      <!-- Header -->
      <div class="header">
        <h2>üèÄ</h2>
        <div class="subtitle">BEST GAME</div>
      </div>

      <!-- Content -->
      <div class="content flex-grow">

        <!-- Teams -->
        <div class="teams">
          <div class="team-item">
            <div class="team-abbr">{{ game.away_team.abbr }}</div>
          </div>
          <div class="separator">@</div>
          <div class="team-item">
            <div class="team-abbr">{{ game.home_team.abbr }}</div>
          </div>
        </div>

        <!-- Date -->
        <div class="date">{{ game.game_date }}</div>

      </div>

      <!-- Footer -->
      <div class="footer">
        <p>Updated: {{ updated_at | default: "recently" }}</p>
      </div>

    {% else %}

      <!-- Empty State -->
      <div class="empty">
        <div class="empty__icon">üèÄ</div>
        <div class="empty__text">No Games</div>
      </div>

    {% endif %}

  </div>
</div>

